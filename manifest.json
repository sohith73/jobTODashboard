{
  "manifest_version": 3,
  "name": "FlashFire Job Extractor",
  "version": "1.0",
  "description": "Extension to extract job data from JobRight, LinkedIn, and Indeed job pages",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8086/*",
    "https://jobright.ai/*",
    "https://*.jobright.ai/*",
    "http://jobright.ai/*",
    "http://*.jobright.ai/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*.indeed.com/*",
    "https://indeed.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Open Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html",
        "panel.js",
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
